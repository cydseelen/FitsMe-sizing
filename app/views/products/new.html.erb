<body>
  <div class="container">
    <div class="row1">
      <div class="logo">
        <%= link_to "FitsMe", root_path, :style=>'color: white;' %>
      </div>
      <ul>
        <li>Product Name</li>
        <li>Garment Type</li>
        <li>Fabric Type</li>
      </ul>
    </div>
    <div class="row2">
      <div class="content">
        <div class="image">
          <%= image_tag 'leather4.jpg', style: "border-radius: 22px;
          width: 425px; height: 500px; margin: 20px; opacity: 1.0; border-color: $gray;"%>
        </div>
        <div class="form">
          <%= simple_form_for @product do |f| %>
          <%= f.input :name, label: "Product Name" %>
          <%= f.input :garment_type, collection: ["shirt", "pants", "jacket", "skirt", "dress", "sweater"] , prompt: "Garment type" %>
          <%= f.input :fabric_type, collection: ["tight less than 5cm allowance", "medium +5 to 10cm allowance", "loose + 10cm allowance"] , prompt: "Design Fit" %>
          <%= f.button :submit, class: 'new-medium-button' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</body>
