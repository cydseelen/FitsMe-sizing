<div class="container">
    <div class="row1">
      <div class="logo">
        <%= link_to "FitsMe", root_path, :style=>'color: white;' %>
      </div>
      <ul>
        <li></h3>Brand Profile and Setup</h3></li>
        <% if user_signed_in?  %>
          <li><%= link_to 'Not you? Change Brand Login', edit_user_registration_path, :style=>'color: white; font-size: 16px;'%></li>
        <% else %>
          <li><%= link_to 'Sign in', new_user_session_path, :style=>'color: white; font-size: 16px;' %></li>
        <% end %>
      </ul>
    </div>
    <div class="row2">
      <div class="content">
        <div class="index-grid2">
          <div class= "row">
            <div class = "col-4">
              <div class = "card-brand">
                <%= image_tag 'brand2.jpg', style: "border-radius: 8px;
                width: 200px; height: 200px; margin: 2px; opacity: 1.0; border-color: $gray; box-shadow: 0 10px 20px 0 $grey;"%>
              </div>
            </div>
            <div class = "col-8 justify-contents-center">
              <h1>Welcome Back <em><%= @brand.name.capitalize %><em></h1>
               <p> <i class="fas fa-location-arrow"></i> 10 Spring Lane Cleveland, Ohio 10889  
                &nbsp; &nbsp; <i class="fas fa-user"> </i> User Since: October 2020
               </p>
               <h3>Alerts and Updates<em></h3>
               <p><i class="fas fa-exclamation-circle"></i> Increased Returns of <%= @product.first.product_sizes.name.first %> for <%= @product.name.first %> </p>
               <p><i class="fas fa-exclamation-circle"></i> Size Large for <%= @product.name.first %> almost out of stock  </p>
            </div>
          </div>
          <div>
            <br>
            <h3><%= @brand.name.capitalize %> Product History</h3>
          <div class ="row">
            <div class = "col-5">
              </h3>Product Quick Stats<h3>
              <div class = "card-left">
                <div>
                <br>
                <br>
                <p> <i class="far fa-arrow-alt-circle-up"></i> Medium is your most commonly ordered size</p>
                <br>
                <p><i class="fas fa-bomb"></i> Extra Large is your most commonly returned size</p>
                <br>
                <%= link_to "Add More Products", new_product_path(@brand), :class=>'btn-orange-big' %>
              </div>
            </div>
            </div>
            <div class = "col-7">
              </h3>Product Gallery</h3>
               <br>
               <br>
             <div class="size-grid">
            <% @product.each do |product| %>
              <div class="card-index">
              <%= link_to product_path(product) do %>
                <% if product.photo.attached?%>
                  <%= cl_image_tag product.photo.key, style: "border-radius: 8px;
          width: 95px; height: 90px; margin: 2px; opacity: 1.0; border-color: $gray;" %>
                    <p><%= product.name %></p>
                <%else%>
                  <%= image_tag 'noimage.jpg', style: "border-radius: 8px;
          width: 95px; height: 90px; margin: 2px; opacity: 1.0; border-color: $gray;"%>
                  <p><%= product.name %></p>
                <%end%>
              <%end%>
            </div>
            <% end %>
          </div>
          </div>
            </div>
          </div>
    </div>
  </div>