 <div class="container">
  <div class="row1">
    <div class="bottom d-flex justify-content-flex-start">
      <ul>
        <% if user_signed_in?  %>
          <li style="font-size: 15px; padding: 5px 5px; color:white;">
            <i class="far fa-user"></i>
            <%= link_to 'Log Out', edit_user_registration_path, :style=>'color: white; font-size: 15px; justify-content:center;'%>
          </li>
        <% else %>
          <li style="font-size: 15px; padding: 5px 5px; color: white;">
            <i class="far fa-user"></i>
            <%= link_to 'Sign in', new_user_session_path, :style=>'color: white; font-size: 15px;' %>
          </li>
        <% end %>
      </ul>
    </div>
    <div>
      <div class="logo">
        <h1 style="margin-top: 24px;"><%= link_to "Fits", root_path, :style=>'color: white; font-weight: bold;' %>Me</h1>
      </div>
      <ul>
        <li><h3>Brand Dashboard</h3></li>
        <div class="d-flex">
          <li style="font-size: 15px;"> Upload Steps:</li>
        </div>
        <div class="d-flex">
          <li style="font-size: 15px; padding: 5px 5px;"> 1. Upload products</li>
        </div>
        <div class="d-flex">
          <li style="font-size: 15px; padding: 5px 15px;"><b>2. Add available sizes<b></li>
        </div>
        <div class="d-flex">
          <li style="font-size: 15px; padding: 5px 30px;"> 3. Activate your products</li>
        </div>
        <div class="d-flex">
          <li style="font-size: 15px;"> Payment Center</li>
        </div>
         <div class="d-flex">
          <li style="font-size: 15px;"> Reports</li>
        </div>
      </ul>
    </div>
  </div>
  <div class="row2">
      <div class="content">
        <div class="index-grid2">
          <div class= "row">
            <div class = "col-8">
                <h1 style="color:$burntorange;"><b>Product Sizes</b></h1>
                <h3> <em>Saenguin</em></h3>
               <p> <i class="fas fa-location-arrow"></i> 10 Spring Lane Cleveland, Ohio 10889
                &nbsp; &nbsp; <i class="fas fa-user"> </i> User Since: October 2020
               </p>
            </div>
            <div class = "col-4 justify-contents-center">
              <%= image_tag 'logo2.png', style: "border-radius: 8px;
                width: 200px; height: auto; margin: 2px; opacity: 1.0; border-color: $gray; box-shadow: 0 10px 20px 0 $grey;"%>
            </div>
          </div>
          <div class="row">
              <%= image_tag 'brandtime2b.png', style: "
            width: 90%; height: auto; margin: 5px;"%>
          </div>
          <div class="row">
            <div class="col-8">
              <h3>Product Size Updates</h3>
              <p>This Information will be used for customer fit recommendations.</p>
              <%# <div class="card-new"> %>
              <div class="card-new ml-0">
                <%= simple_form_for [@product, @product_size] do |f| %>
                  <%= f.input :size_name, collection: ["extra small", "small", "medium", "large", "extra large"] , prompt: "Select Size" %>
                  <%= f.input :hip_measurement, as: :string, placeholder: "cm", style:"width:400px;" %>

                  <%= f.input :bust_measurement, as: :string, placeholder: "cm" %>

                  <%= f.input :waist_measurement, as: :string, placeholder: "cm" %>
                  <%= f.input :length_measurement, as: :string, placeholder: "cm" %>
              </div>
            </div>
            <div class="col-4 d-flex justify-content-flex-start align-items-center">
              <div class="index-grid2">
                <div class="row" >
                  <%= f.button :submit, value: "Save Product Size", class: 'btn-orange-big', style: "margin-left: 00px;" %>
                  <% end %>
                </div>
               <div class="row bottom">
                  <%= link_to products_path, style: "color: grey; margin-left: 300px; margin-top: 20px; font-size: 15px;" do %>
                <i class="fas fa-long-arrow-alt-left"></i> Back to Brand
                <% end %>
                </div>
              </div>
              <%# <%= image_tag 'sewing2.jpg',
              style: "width: 90%; height: auto; margin: 5px; opacity: .9;"%>
         </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
