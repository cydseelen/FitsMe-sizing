  <div class="background">

  <div class="overlay" style=" position: absolute;width: 100%; height: 100vh;text-align: left;">
  <nav class="navbar" style="margin-top: 1%;">
                <div class="navbar-brand">
                    <%= link_to "FitsMe", root_path, :style=>'color: white;' %>
                </div>
  </nav>
  <div class="col-md-12">
    <div class="quiz-container">
      <div class="tab">
      <h1>Welcome to the <strong>Fits</strong>Me size finder!</h1>
      <p>Answer a few questions to get your size recommendation</p>
      <p>Takes 1 min</p>
    </div>
      <%= simple_form_for @customer_datum, html: { id: "sizeForm" } do |f| %>
      <div class="tab">
        <%#= f.input :age, as: :slider, min: 0, max: 10, step: 2, orientation: 'vertical',
                     range: true, ticks: [0, 5, 10] %>
        <%= f.input :age, label: "How old are you?", placeholder: "Type your answer here..." %>
      </div>
      <div class="tab">
        <%= f.input :height, label: 'What is your height in cm?', placeholder: "Type your answer here..." %>
      </div>
      <div class="tab">
        <%= f.input :weight, label: 'What is your weight in kg?', placeholder: 'Type your answer here...' %>
      </div>
      <div class="tab">

        <%= f.input :body_shape, collection: [[0, 'slim'], [1, 'athletic'], [2, 'full']], label_method: :second, value_method: :first %>
      </div>
      <div class="tab">
        <%= f.input :fit_preference, collection: [[0, 'tight'], [1, 'medium'], [2, 'loose']], label_method: :second, value_method: :first %>
        <%= f.button :submit, "Get your recommendation", class: "submit-button" %>
      </div>
      <% end %>
      <div style="overflow:auto;">
        <div style="float:right;">
          <button type="button" id="prevBtn">Back</button>
          <button type="button" id="nextBtn">Next</button>
        </div>
      </div>
      <div style="text-align:center;margin-top:40px;">
        <span class="step"></span>
        <span class="step"></span>
        <span class="step"></span>
        <span class="step"></span>
        <span class="step"></span>
        <span class="step"></span>
      </div>
    </div>
  </div>
  </div>
  </div>
